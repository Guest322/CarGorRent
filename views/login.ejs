<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    <!-- Display validation errors -->
                    <% if (errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg %></li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>

                    <!-- Login Form -->
                    <form action="/auth/login" method="POST">
                        <!-- Email Field -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= oldInput.email || '' %>" required>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" required>
                                <span class="input-group-text">
                                    <i id="password-eye" class="bi bi-eye-slash"></i>
                                </span>
                            </div>
                        </div>

                        <!-- Link to Registration Page -->
                        <p class="text-center mb-4">
                            Belum punya akun?
                            <a class="text-primary text-decoration-none" href="/auth/register">Buat disini</a>
                        </p>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/passwordToggle.js"></script>