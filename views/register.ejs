<% if (errors.length > 0) { %>
    <div class="alert alert-danger">
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    </div>
<% } %>

<form action="/auth/register" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= oldInput.name || '' %>">
    </div>
    <div class="mb-3">
        <label for="mobile" class="form-label">Mobile</label>
        <input type="text" class="form-control" id="mobile" name="mobile" value="<%= oldInput.mobile || '' %>">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= oldInput.email || '' %>">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="input-group">
            <input type="password" class="form-control" id="password" name="password">
            <span class="input-group-text">
                <i id="password-eye" class="bi bi-eye-slash"></i>
            </span>
        </div>
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <div class="input-group">
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
            <span class="input-group-text">
                <i id="confirmPassword-eye" class="bi bi-eye-slash"></i>
            </span>
        </div>
    </div>
    <p class="text-center">
        Sudah punya akun?
        <a class="text-primary" href="/auth/login">Masuk disini</a>
    </p>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
